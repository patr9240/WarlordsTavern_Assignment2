     This is the index view for the Worlds End Tavern food menu
-->

@{
    ViewBag.Title = "Index";
}

<h2>Browse Dish Types</h2>
<p>
    Select one of the @Model.Count() food types:
</p>
<ul>
    @foreach (FoodType item in Model)
    {
        <li>@Html.ActionLink(item.Name, "Browse", new { foodtype = item.Name })</li>
    }
</ul>
